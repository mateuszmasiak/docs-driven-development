{
  "mcpServers": {
    "feature-orchestrator": {
      "command": "node",
      "args": [
        "../../mcp/feature-orchestrator/dist/index.js"
      ],
      "description": "Main MCP server for Feature Orchestrator - workspace, state, and artifact management",
      "enabled": true,
      "env": {
        "NODE_ENV": "production"
      }
    },
    "playwright-orchestrator": {
      "command": "node",
      "args": [
        "../../mcp/playwright-orchestrator/dist/index.js"
      ],
      "description": "MCP server for orchestrating Playwright E2E tests with feature tagging and result correlation",
      "enabled": true,
      "env": {
        "NODE_ENV": "production"
      }
    },
    "docs-reader": {
      "command": "node",
      "args": [
        "../../mcp/docs/dist/index.js"
      ],
      "description": "MCP server for reading and searching project documentation",
      "enabled": true,
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "configuration": {
    "feature-orchestrator": {
      "maxIterations": 5,
      "workspacesDir": ".claude/feature-dev"
    },
    "playwright-orchestrator": {
      "defaultTimeout": 30000,
      "retries": 2,
      "workers": 4
    }
  }
}
